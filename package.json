{
  "name": "superpal",
  "version": "1.2.9",
  "description": "Create automatically a palette with vivid colors from a single input color for UI design and design systems.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "tsup; jest --config jest.config.js",
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jaukia/superpal.git"
  },
  "keywords": [
    "color",
    "color-palette",
    "okhsl"
  ],
  "author": "Janne Aukia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaukia/superpal/issues"
  },
  "homepage": "https://github.com/jaukia/superpal#readme",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/tap": "^15.0.7",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "tap": "^16.3.0",
    "ts-jest": "^28.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tsup": "^6.4.0",
    "typescript": "^4.7.2"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "culori": "^2.0.3",
    "hsluv": "^0.1.0",
    "tsc": "^2.0.4"
  }
}
